## $Id$

## arguments we want to run parrot with
PARROT_ARGS   :=

## configuration settings
VERSION       := @versiondir@
BIN_DIR       := @bindir@
LIB_DIR       := @libdir@$(VERSION)
DOC_DIR       := @docdir@$(VERSION)
MANDIR        := @mandir@$(VERSION)

# Set up extensions
LOAD_EXT      := @load_ext@
O             := @o@

# Various paths
PERL6GRAMMAR  := $(LIB_DIR)/library/PGE/Perl6Grammar.pbc
NQP           := $(LIB_DIR)/languages/nqp/nqp.pbc
PCT           := $(LIB_DIR)/library/PCT.pbc
PMC_DIR       := src/pmc
OPS_DIR       := src/ops

## Setup some commands
MAKE          := @make_c@
PERL          := @perl@
CAT           := @cat@
CHMOD         := @chmod@
CP            := @cp@
MKPATH        := @mkpath@
RM_F          := @rm_f@
RM_RF         := @rm_rf@
POD2MAN       := pod2man
#IF(parrot_is_shared and not(cygwin or win32)):export LD_RUN_PATH := @blib_dir@:$(LD_RUN_PATH)
PARROT        := $(BIN_DIR)/parrot@exe@
PBC_TO_EXE    := $(BIN_DIR)/pbc_to_exe@exe@
#IF(darwin):
#IF(darwin):# MACOSX_DEPLOYMENT_TARGET must be defined for OS X compilation/linking
#IF(darwin):export MACOSX_DEPLOYMENT_TARGET := @osx_version@

FUN_GROUP := $(PMC_DIR)/fun_group$(LOAD_EXT)
FUN_OPS := $(OPS_DIR)/fun_ops$(LOAD_EXT)

PMC_DEPS := \
  config/makefiles/pmc.in \
  $(PMC_DIR)/list.pmc \
  $(PMC_DIR)/delayedsub.pmc \
  $(PMC_DIR)/char.pmc \
  $(PMC_DIR)/eosmarker.pmc

OPS_DEPS := \
  config/makefiles/ops.in \
  $(OPS_DIR)/fun.ops

SOURCES := \
  fun.pir \
  src/gen_grammar.pir \
  src/gen_actions.pir \
  src/gen_builtins.pir \
  src/gen_objects.pir

BUILTINS_PIR := \
  src/builtins/builtins.pir \
  src/builtins/privfunctions.pir \
  src/builtins/combinators.pir \
  src/builtins/composition.pir \
  src/builtins/operands.pir \
  src/builtins/io.pir \
  src/builtins/codeflow.pir \
  src/builtins/sequences.pir \
  src/builtins/math.pir \
  src/builtins/predicates.pir

CLASSES_PIR = \
  src/classes/Stack.pir \
  src/classes/Continuation.pir

DOCS := COPYRIGHT TODO

BUILD_CLEANUPS := \
  fun.pbc \
  "src/gen_*.pir" \
  "dynext/*$(O)" \
  "*.c" \
  "*$(O)" \
  fun@exe@ \
#IF(win32):  parrot-fun.exe \
#IF(win32):  parrot-fun.iss \
#IF(win32):  "setup-parrot-*.exe" \
  installable_fun@exe@

TEST_CLEANUPS :=

# the default target
build: $(FUN_OPS) $(FUN_GROUP) fun.pbc

all: build fun@exe@ installable

fun.pbc: $(SOURCES)
	$(PARROT) $(PARROT_ARGS) -o fun.pbc fun.pir

fun@exe@: fun.pbc
	$(PBC_TO_EXE) fun.pbc

src/gen_grammar.pir: $(PERL6GRAMMAR) src/gen_builtins.pir src/parser/grammartt.pg
	$(PERL) tools/gengrammar.pl
	$(PARROT) $(PARROT_ARGS) $(PERL6GRAMMAR) \
	    --output=src/gen_grammar.pir \
	    src/parser/grammar.pg

src/gen_actions.pir: $(NQP) src/parser/actions.pm
	$(PARROT) $(PARROT_ARGS) $(NQP) --output=src/gen_actions.pir \
	    --target=pir src/parser/actions.pm

src/gen_builtins.pir: $(BUILTINS_PIR)
	$(CAT) $(BUILTINS_PIR) > src/gen_builtins.pir

src/gen_objects.pir: $(CLASSES_PIR)
	$(CAT) $(CLASSES_PIR) >src/gen_objects.pir

$(FUN_GROUP): $(PMC_DEPS)
	$(MAKE) $(PMC_DIR)

$(FUN_OPS): $(OPS_DEPS)
	$(MAKE) $(OPS_DIR)

installable: installable_fun@exe@

installable_fun@exe@: fun.pbc
	$(PBC_TO_EXE) fun.pbc --install

Makefile: config/makefiles/root.in
	$(PERL) Configure.pl

# This is a listing of all targets, that are meant to be called by users
help:
	@echo ""
	@echo "Following targets are available for the user:"
	@echo ""
	@echo "  build:             fun.pbc"
	@echo "                     This is the default."
	@echo "  fun@exe@            Self-hosting binary not to be installed."
	@echo "  all:               fun.pbc fun@exe@ installable"
	@echo "  installable:       Create libs and self-hosting binaries to be installed."
	@echo "  install:           Install the installable targets and docs."
	@echo ""
	@echo "Testing:"
	@echo "  test:              Run the test suite."
	@echo "  test-installable:  Test self-hosting targets."
	@echo "  testclean:         Clean up test results."
	@echo ""
	@echo "Cleaning:"
	@echo "  clean:             Basic cleaning up."
	@echo "  realclean:         Removes also files generated by 'Configure.pl'"
	@echo "  distclean:         Removes also anything built, in theory"
	@echo ""
	@echo "Misc:"
	@echo "  help:              Print this help message."
	@echo ""

test: build
	$(PERL) t/harness

# basic run for missing libs
test-installable: installable
	echo "1" | ./installable_fun@exe@

install: installable
	$(MAKE) $(OPS_DIR) install
	$(MAKE) $(PMC_DIR) install
	$(CP) installable_fun@exe@ $(BIN_DIR)/parrot-fun@exe@
	$(CHMOD) 0755 $(BIN_DIR)/parrot-fun@exe@
	-$(MKPATH) $(LIB_DIR)/languages/fun
	$(CP) fun.pbc $(LIB_DIR)/languages/fun/fun.pbc
	-$(MKPATH) $(MANDIR)/man1
	$(POD2MAN) fun.pir > $(MANDIR)/man1/parrot-fun.1
	-$(MKPATH) $(DOC_DIR)/languages/fun
	$(CP) $(DOCS) $(DOC_DIR)/languages/fun

uninstall:
	$(MAKE) $(OPS_DIR) uninstall
	$(MAKE) $(PMC_DIR) uninstall
	$(RM_F) $(BIN_DIR)/parrot-fun@exe@
	$(RM_RF) $(LIB_DIR)/languages/fun
	$(RM_F) $(MANDIR)/man1/parrot-fun.1
	$(RM_RF) $(DOC_DIR)/languages/fun

win32-inno-installer: installable
	-$(MKPATH) man/man1
	$(POD2MAN) fun.pir > man/man1/parrot-fun.1
	-$(MKPATH) man/html
	pod2html --infile fun.pir --outfile man/html/parrot-fun.html
	$(CP) installable_fun@exe@ parrot-fun.exe
	$(PERL) $(LIB_DIR)/tools/dev/mk_inno_language.pl fun
	iscc parrot-fun.iss

testclean:
	$(RM_F) $(TEST_CLEANUPS)

clean:
	$(MAKE) $(OPS_DIR) clean
	$(MAKE) $(PMC_DIR) clean
	$(RM_F) $(TEST_CLEANUPS) $(BUILD_CLEANUPS)

realclean:
	$(MAKE) $(OPS_DIR) realclean
	$(MAKE) $(PMC_DIR) realclean
	$(RM_F) $(TEST_CLEANUPS) $(BUILD_CLEANUPS) Makefile

distclean: realclean

